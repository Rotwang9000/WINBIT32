{

	"exclude": [
		"node_modules",
		"**/node_modules",
		"**/wallets/winbit"
	],
	"include": [
		"src/components/**/*.ts"
	],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"jsx": "react",
		"target": "ES2023",
		"moduleResolution":"node",
		"module": "commonjs",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": false,
		"types": [],
		"noEmitOnError": true,
		"noCheck": true

	}
}